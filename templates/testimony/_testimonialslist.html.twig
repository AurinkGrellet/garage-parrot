<div class="container">
    <div class="row">
        {% if testimonials is empty %}
            <div>Aucun témoignage à afficher.</div>
        {% else %}
            {% for testimonial in testimonials %}
                <div class="col-sm-4 mt-2">
                    <div class="card d-md-flex p-2 text-center h-100">
                        <div>
                            <div>Nom : {{ testimonial.name }}</div>
                            <div>Note : {{ testimonial.note }}/5</div>
                        </div>
                        <hr>
                        <div>
                            <div>{{ testimonial.comment }}</div>
                            {% if is_granted('ROLE_EMPLOYEE') %}
                                <div class="mt-3 d-flex justify-content-around">
                                    {% if app.request.attributes.get('_route') == 'manage_testimony' %}
                                        <a href="{{ path('approve_testimony', {id:testimonial.id}) }}" class="btn btn-info btn-sm" style="background-color: #262526; border-color: #262526" role="button" aria-pressed="true">Approuver</a>
                                    {% endif %}
                                    <a href="{{ path('delete_testimony', {id:testimonial.id}) }}" class="btn btn-info btn-sm" style="background-color: #262526; border-color: #262526" role="button" aria-pressed="true">Supprimer</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>